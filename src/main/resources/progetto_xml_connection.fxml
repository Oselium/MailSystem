<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="234.0" prefWidth="366.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.ConnectionErrorController">
   <left>
      <ImageView fitHeight="114.0" fitWidth="101.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@error.png" />
         </image>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <BorderPane.margin>
            <Insets bottom="2.0" left="10.0" right="2.0" />
         </BorderPane.margin>
      </ImageView>
   </left>
   <right>
      <Label fx:id="text_label" alignment="CENTER" contentDisplay="CENTER" prefHeight="141.0" prefWidth="301.0" text="Error message" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="NONE" />
         </cursor>
         <BorderPane.margin>
            <Insets right="10.0" />
         </BorderPane.margin>
      </Label>
   </right>
   <bottom>
      <Button fx:id="button_retry" alignment="CENTER" mnemonicParsing="false" onAction="#handleRetry" prefHeight="32.0" prefWidth="162.0" text="OK, I UNDERSTAND" BorderPane.alignment="BOTTOM_RIGHT">
         <font>
            <Font size="14.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" />
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
